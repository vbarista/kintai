= simple_form_for @company, html: { class: 'form-horizontal' } do |f|
  = f.input :name
  = error_span(@company[:name])
  = f.input :code
  = error_span(@company[:code])
  = f.button :submit, class: 'btn-primary'
  = link_to t('.cancel', default: t("helpers.links.cancel")), companies_path, class: 'btn btn-default'
