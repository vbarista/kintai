= form_for [@user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
    = f.label :birthday
    = f.date_field :birthday, class: 'form-control'
    = f.label :contact
    = f.text_field :contact, class: 'form-control'
    = f.label :emergency_contact
    = f.text_field :emergency_contact, class: 'form-control'
    = f.label :partner
    = f.select :partner_id, Partner.all.map {|c| [c.name, c.id]}, { include_blank: true }, { class: 'form-control' }
    == <br />
    = f.submit  '保存', class: 'btn btn-success form-control'
